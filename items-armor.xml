  <element name="Cloak" type="Armor" source="Homebrew Collection" id="ID_WOTC_DND_WIKI_CLOAK">
    <setters>
      <set name="category">Armor</set>
      <set name="cost" currency="gp">N/A</set>
      <set name="weight" lb="0">0 lb.</set>
      <set name="slot">neck</set>
